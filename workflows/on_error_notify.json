{
  "name": "Portreva \u2014 On Error Notify",
  "nodes": [
    {
      "parameters": {},
      "name": "On Error",
      "type": "n8n-nodes-base.errorTrigger",
      "typeVersion": 1,
      "position": [
        300,
        300
      ]
    },
    {
      "parameters": {
        "url": "={{$env.ERROR_NOTIFY_WEBHOOK}}",
        "method": "POST",
        "jsonParameters": true,
        "bodyParametersJson": "={{ JSON.stringify({ workflow: $workflow.name, executionId: $execution.id, error: $json.error, ts: new Date().toISOString() }) }}"
      },
      "name": "Notify",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [
        560,
        300
      ]
    }
  ],
  "connections": {
    "On Error": {
      "main": [
        [
          {
            "node": "Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}