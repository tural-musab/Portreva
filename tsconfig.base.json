{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@portreva/ui": ["packages/ui/src"],
      "@portreva/schemas": ["packages/schemas/src"],
      "@portreva/utils": ["packages/utils/src"],
      "@portreva/sdk": ["packages/sdk/src"]
    }
  }
}
